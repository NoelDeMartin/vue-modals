{
    "name": "@noeldemartin/vue-modals",
    "version": "0.0.0",
    "type": "module",
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./dist/noeldemartin-vue-modals.d.ts",
            "default": "./dist/noeldemartin-vue-modals.js"
        },
        "./language-plugin": {
            "default": "./dist/language-plugin/noeldemartin-vue-modals.cjs"
        }
    },
    "files": [
        "src",
        "dist"
    ],
    "license": "MIT",
    "author": "Noel De Martin",
    "repository": "github:NoelDeMartin/vue-modals",
    "scripts": {
        "build": "pnpm run build:main && pnpm run build:language-plugin",
        "build:main": "vite build",
        "build:language-plugin": "esbuild src/language-plugin/index.cts --bundle --format=cjs --outfile=dist/language-plugin/noeldemartin-vue-modals.cjs",
        "lint": "noeldemartin-lint src",
        "test": "vitest --run",
        "test:ci": "vitest --run --reporter verbose",
        "verify": "noeldemartin-verify"
    },
    "peerDependencies": {
        "vue": "*"
    },
    "dependencies": {
        "@noeldemartin/utils": "^0.7.1"
    },
    "devDependencies": {
        "@arethetypeswrong/cli": "^0.18.2",
        "@noeldemartin/eslint-config-typescript": "^0.1.2",
        "@noeldemartin/eslint-plugin": "^0.1.0",
        "@noeldemartin/scripts": "^0.2.1",
        "@noeldemartin/testing": "^0.0.0",
        "@types/node": "^24.0.13",
        "@typescript-eslint/eslint-plugin": "^5.6.0",
        "@vitejs/plugin-vue": "^6.0.0",
        "@vue/language-core": "^3.0.1",
        "@vue/tsconfig": "^0.7.0",
        "esbuild": "^0.25.6",
        "eslint": "^8.57.1",
        "prettier-eslint-cli": "^8.0.1",
        "publint": "^0.3.12",
        "typescript": "^5.8.3",
        "vite": "^7.0.4",
        "vite-plugin-dts": "^4.5.4",
        "vitest": "^3.2.4",
        "vue": "^3.5.17",
        "vue-tsc": "^3.0.2"
    },
    "eslintConfig": {
        "extends": [
            "@noeldemartin/eslint-config-typescript"
        ]
    },
    "prettier": {
        "printWidth": 120
    }
}
