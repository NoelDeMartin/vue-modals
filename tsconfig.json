{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["src/**/*.ts", "src/**/*.vue"],
    "compilerOptions": {
        "isolatedModules": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "baseUrl": ".",
        "paths": {
            "@noeldemartin/vue-modals": ["./src/core"],
            "@noeldemartin/vue-modals/*": ["./src/core/*"]
        }
    }
}
